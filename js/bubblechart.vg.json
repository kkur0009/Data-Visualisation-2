{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Fertility Rate Vs Migrants",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/kkur0009/Data-Visualisation-2/main/data/population.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: " 
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent Selection: " 
      }
    }
  ],
  "transform": [
    {"calculate": "datum['Fert. Rate'] === 'N.A.' ? null : +datum['Fert. Rate']", "as": "Fert. Rate"},
    {"calculate": "datum['Migrants (net)'] === 'N.A.' ? null : +datum['Migrants (net)']", "as": "Migrants (net)"},
    {"filter": "datum['Fert. Rate'] !== null && datum['Migrants (net)'] !== null"},
    {"filter": "datum['Population (2020)'] > Population_Above"}, 
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
  ],
  "encoding": {
    "y": {
      "field": "Migrants (net)",
      "type": "quantitative",
      "title": "Migrants",
      "axis": {"tickCount": 7},
      "scale": {"domain": [-800000, 1200000]}
    },
    "x": {
      "field": "Fert. Rate",
      "type": "quantitative",
      "title": "Fertility Rate",
      "axis": {"tickCount": 5},
      "scale": {"domain": [0, 7]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population (2020)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
               "Africa",
               "Asia",
               "Europe",
               "North America",
               "Oceania",
               "South America"
            ],
            "range": [
              "#a6d854",
              "#66c2a5",
              "#8da0cb",
              "#e78ac3",
              "#ffd92f",
              "#80b1d3"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Migrants (net)", "title": "Number of Migrants", "type": "nominal"},
          {"field": "Fert. Rate", "title": "Fertility Rate", "type": "nominal"}
      ]      
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 80,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'United States' || datum['Country'] == 'Venezuela'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": null  
      }
    }
  ]
}